<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/text</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorPrimaryInverse">@color/text</item>
        <item name="android:textColorSecondary">@color/text</item>
        <item name="android:textColorSecondaryInverse">@color/text</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:colorForeground">@color/text</item>
        <item name="android:hint">@color/dark_hint_color</item>


        <item name="changeThemeText">@string/change_to_light</item>
        <item name="changeThemeImg">@drawable/icon_bright</item>

        <item name="themeName">@string/darkThemeName</item>

    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/text</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:textColorPrimary">@color/background</item>
        <item name="android:textColorPrimaryInverse">@color/background</item>
        <item name="android:textColorSecondary">@color/background</item>
        <item name="android:textColorSecondaryInverse">@color/background</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:colorForeground">@color/background</item>
        <item name="android:hint">@color/light_hint_color</item>


        <item name="changeThemeText">@string/change_to_dark</item>
        <item name="changeThemeImg">@drawable/icon_dark</item>


        <item name="themeName">@string/lightThemeName</item>

    </style>


    <style name="customButtonLight" parent="@android:style/Widget.Button">
        <item name="com.production.outlau.translate:font">font/montserrat_light.ttf</item>
    </style>
    <style name="customButton" parent="@android:style/Widget.Button">
        <item name="com.production.outlau.translate:font">font/montserrat_regular.ttf</item>
    </style>
    <style name="customEditText" parent="@android:style/Widget.EditText">
        <item name="com.production.outlau.translate:font">font/montserrat_light.ttf</item>
    </style>


</resources>
